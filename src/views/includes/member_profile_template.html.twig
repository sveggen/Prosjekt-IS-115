<section class="ui left aligned segment">
<div class="ui centered card fluid">
    <div class="image">
        <img src="{{ profileImage }}">
    </div>
    <div class="content">
        <div class="header">{{ data.first_name }} {{ data.last_name }}</div>
        <div class="meta">
            <span class="date">Registered: {{ data.time_of_registration |date("d. M. Y. H:i") }}</span>
        </div>
        <div class="ui divider"></div>
        <div class="ui list">
            <div class="item">
                <i class="address card icon"></i>
                <div class="content">
                    <label> <b>Member-ID:</b>
                    {{ data.member_id }}
                    </label>
                </div>
            </div>
            <div class="ui divider"></div>
            <div class="item">
                <i class="map marker alternate icon"></i>
                <div class="content">
                    <label> <b>Address:</b>
                    {{ data.street_address }}, {{ data.zip_code }}, {{ data.city | title }}
                    </label>
                </div>
            </div>
            <div class="ui divider"></div>
            <div class="item">
                <i class="mail icon"></i>
                <div class="content">
                    <label> <b>Email:</b>
                    <a href="mailto:{{ data.email }}">{{ data.email }}</a>
                    </label>
                </div>
            </div>
            <div class="ui divider"></div>
            <div class="item">
                <i class="phone icon"></i>
                <div class="content">
                    <label> <b>Phone number:</b>
                    +47 {{ data.phone_number }}
                    </label>
                </div>
            </div>
            <div class="ui divider"></div>
            <div class="item">
                <i class="money icon"></i>
                <div class="content">
                    <label> <b>Payment status:</b>
                    {% if data.subscription_status == 1 %}
                        Paid
                    {% else %}
                        Not paid
                    {% endif %}
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="extra content">
         <span class="left floated">
        <b>Interests:</b>
      </span>
        <div class="ui horizontal list">
            <div class="item">|
                {% for interest in interests %}
                    {{ interest.type }} |
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="extra content">
         <span class="left floated">
        <b>Activities:</b>
      </span>
        <div class="ui horizontal list">
            <div class="item">|
                {% for activity in activities %}
                    {{ activity.title }} |
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="extra content">
         <span class="left floated">
        <b>Roles:</b>
      </span>
        <div class="ui horizontal list">
            <div class="item">|
                {% for role in roles %}
                    {{ role.privilege | capitalize }} |
                {% endfor %}
            </div>
        </div>
    </div>
</div>
</section>