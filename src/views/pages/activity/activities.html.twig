{% extends './includes/base.html.twig' %}
{% block title %}
    Activities
{% endblock %}

{% block content %}

    <section class="ui center aligned middle aligned segment">
        <h1 class="ui header">
            <i class="futbol icon"></i>
            Upcoming Activities
        </h1>

        {# success message handling #}
        {% for message in session.getFlashbag().get('activitySuccess') %}
            <div class="ui positive message">
                <div class="header">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        {# list all activities in a table #}
        <table class="ui selectable celled table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Start time</th>
                    <th>Leader</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    {% for activity in activities %}

                    <td data-label="ID">{{ activity.activity_id }}</td>
                    <td data-label="Title"><a
                                href="http://localhost:8081/activities/{{ activity.activity_id }}">{{ activity.title }}</a>
                    </td>
                    <td data-label="Start time">{{ activity.start_time|date("l d. M. Y. H:i") }}</td>
                    <td data-label="Leader">{{ activity.first_name }}</td>
                </tr>

                {% endfor %}
            </tbody>
        </table>
        {# show add activity modal if user is admin #}
        {% if session.get('role') == 'leader' %}

        <div class="ui button">
            Add activity
        </div>
        <div class="ui modal">
            <i class="close icon"></i>
            <div class="header">
                Add activity
            </div>
            <div class="content">
                <form class="ui form" id="add-activity" action="" method="post">
                    <div class="field">
                        <label>Title
                            <input type="text" name="title" placeholder="eg. Band practice">
                        </label>
                    </div>
                    <div class="two fields">
                        <div class="field">
                            <label>End time
                                <input type="datetime-local" name="start-time">
                            </label>
                        </div>
                        <div class="field">
                            <label>End time
                                <input type="datetime-local" name="end-time">
                            </label>
                        </div>
                    </div>
                    <div class="field">
                        <label>Leader
                            <input placeholder="You" readonly="" type="text">
                        </label>
                    </div>
                    <div class="field">
                        <label>Max attendees
                            <input type="number" name="max-attendees" min="1" max="100">
                        </label>
                    </div>
                    <div class="field">
                        <label>Description
                            <textarea name="description" placeholder="A short description of the activity..."
                                      rows="4"></textarea>
                        </label>
                    </div>
                    <button class="ui primary button" form="add-activity" type="submit">Save activity</button>
                </form>
            </div>
        </div>
    </section>

    {% endif %}
    <script>
        $('.ui.button').click(function () {
            $('.ui.modal').modal('show');
        });
    </script>

{% endblock %}
